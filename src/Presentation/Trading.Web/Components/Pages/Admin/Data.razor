@page "/admin/data"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "AdminOnly")]
@attribute [StreamRendering]
@rendermode InteractiveServer

<PageTitle>Admin - Data Management</PageTitle>

<h1>Data Management</h1>
<p class="text-muted">Manage users, roles, and system data. Admin access only.</p>

@if (StatusMessage is not null)
{
    <div class="alert @(IsError ? "alert-danger" : "alert-success") alert-dismissible fade show" role="alert">
        @StatusMessage
        <button type="button" class="btn-close" @onclick="ClearStatus" aria-label="Close"></button>
    </div>
}

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card stats-card stats-card-primary">
            <div class="card-body">
                <h5 class="card-title">Users</h5>
                <p class="card-text display-6">@UserCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stats-card stats-card-success">
            <div class="card-body">
                <h5 class="card-title">Roles</h5>
                <p class="card-text display-6">@RoleCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stats-card stats-card-info">
            <div class="card-body">
                <h5 class="card-title">Confirmed</h5>
                <p class="card-text display-6">@ConfirmedCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stats-card stats-card-warning">
            <div class="card-body">
                <h5 class="card-title">Locked Out</h5>
                <p class="card-text display-6">@LockedOutCount</p>
            </div>
        </div>
    </div>
</div>

<!-- Tabs -->
<ul class="nav nav-tabs mb-3" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link @(ActiveTab == "users" ? "active" : "")"
                @onclick='() => ActiveTab = "users"' role="tab">
            Users
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link @(ActiveTab == "roles" ? "active" : "")"
                @onclick='() => ActiveTab = "roles"' role="tab">
            Roles
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link @(ActiveTab == "create" ? "active" : "")"
                @onclick='() => ActiveTab = "create"' role="tab">
            Create User
        </button>
    </li>
</ul>

<!-- Tab Content -->
@if (ActiveTab == "users")
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Display Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Confirmed</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Users is not null)
                {
                    @foreach (var user in Users)
                    {
                        <tr>
                            <td>@user.DisplayName</td>
                            <td>@user.Email</td>
                            <td>
                                @foreach (var role in user.Roles)
                                {
                                    <span class="badge @(role == "Admin" ? "text-bg-danger" : "text-bg-secondary") me-1">@role</span>
                                }
                            </td>
                            <td>
                                @if (user.EmailConfirmed)
                                {
                                    <span class="badge text-bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge text-bg-warning">No</span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td>
                                @if (!user.Roles.Contains("Admin"))
                                {
                                    <button class="btn btn-sm btn-outline-danger"
                                            @onclick="() => DeleteUserAsync(user.Id)">
                                        Delete
                                    </button>
                                    <button class="btn btn-sm btn-outline-primary ms-1"
                                            @onclick="() => PromoteToAdminAsync(user.Id)">
                                        Make Admin
                                    </button>
                                }
                                else
                                {
                                    <span class="text-muted">Protected</span>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
}
else if (ActiveTab == "roles")
{
    <div class="row">
        <div class="col-md-6">
            <h5>Existing Roles</h5>
            <ul class="list-group mb-3">
                @if (Roles is not null)
                {
                    @foreach (var role in Roles)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @role.Name
                            <span class="badge text-bg-primary rounded-pill">@role.UserCount users</span>
                        </li>
                    }
                }
            </ul>
        </div>
        <div class="col-md-6">
            <h5>Add Role</h5>
            <EditForm Model="NewRole" OnValidSubmit="CreateRoleAsync" FormName="createRole">
                <div class="input-group">
                    <InputText @bind-Value="NewRole.Name" class="form-control" placeholder="Role name" />
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </EditForm>
        </div>
    </div>
}
else if (ActiveTab == "create")
{
    <div class="row">
        <div class="col-md-6">
            <EditForm Model="NewUser" OnValidSubmit="CreateUserAsync" FormName="createUser">
                <DataAnnotationsValidator />
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <InputText @bind-Value="NewUser.Email" class="form-control" />
                    <ValidationMessage For="() => NewUser.Email" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Display Name</label>
                    <InputText @bind-Value="NewUser.DisplayName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <InputText @bind-Value="NewUser.Password" type="password" class="form-control" />
                    <ValidationMessage For="() => NewUser.Password" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Role</label>
                    <InputSelect @bind-Value="NewUser.Role" class="form-select">
                        @if (Roles is not null)
                        {
                            @foreach (var role in Roles)
                            {
                                <option value="@role.Name">@role.Name</option>
                            }
                        }
                    </InputSelect>
                </div>
                <button type="submit" class="btn btn-primary">Create User</button>
            </EditForm>
        </div>
    </div>
}
